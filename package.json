{
  "name": "interview_assistant",
  "version": "1.0.0",
  "description": "Invisible AI tool for solving Coding Questions during technical interviews",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc && webpack --config webpack.config.js",
    "watch": "concurrently \"tsc -w\" \"webpack --config webpack.config.js --watch\"",
    "dev": "concurrently \"npm run watch\" \"electron .\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Viljar Võidula <viljar@forgemaster.ai>",
  "license": "MIT",
  "homepage": "https://github.com/viljar/interview_assistant",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^20.10.0",
    "@types/node-wav": "^0.0.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^37.2.0",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@google/genai": "^1.9.0",
    "@types/wav": "^1.0.4",
    "data-uri-to-buffer": "^6.0.2",
    "dotenv": "^16.4.7",
    "fetch-blob": "^4.0.0",
    "formdata-polyfill": "^4.0.10",
    "fluent-ffmpeg": "^2.1.3",
    "mic": "^2.1.2",
    "node-fetch": "^3.3.2",
    "node-mic": "^1.0.1",
    "node-wav": "^0.0.2",
    "openai": "^4.87.3",
    "prebuild-install": "^7.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recorder-js": "^1.0.7"
  },
  "build": {
    "appId": "com.InterviewAssistant.app",
    "productName": "InterviewAssistant",
    "directories": {
      "output": "release"
    },
    "asarUnpack": [
      "**/node_modules/openai/**/*",
      "**/node_modules/node-fetch/**/*"
    ],
    "files": [
      "dist/**/*",
      "node_modules/**",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "maintainer": "Viljar Võidula <viljar@forgemaster.cao>"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}
